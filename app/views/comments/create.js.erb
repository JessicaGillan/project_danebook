console.log("Start of comments/create.js.erb");

(function(){
  $('#new_comment')[0].reset();

  var comment = "<%= escape_javascript(render @comment) %>";
  var $comment = $(comment);
  var search = "[data-type='<%= @comment.commentable.type%>'][data-id='<%= @comment.commentable.id %>'] .comments"

  var $comments = $(search);

  $comments.append($comment);

  $comment.hide();
  $comment.slideDown(500);
})();

console.log("End of comments/create.js.erb");
