
<div class="navbar-wrapper">
<div class="container ">

<nav id="login-nav" class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a href="/home"><img class="navbar-brand img-circle" alt="Danish Flag" src="../assets/danish_flag.gif"></a>
      <a class="navbar-brand" href="#">Danebook</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

        <%= form_tag session_path, class: 'navbar-form navbar-right' do %>
          <div class="form-group">
            <%= email_field_tag :email, nil, class: 'form-control', placeholder: 'Email' %>
          </div>
          <div class="form-group">
            <%= password_field_tag :password, nil, class: 'form-control', placeholder: "Password" %>
          </div>
          <div class="form-group">
            <%= submit_tag "Log In", class: 'btn btn-success'%>
          </div>
        <% end %>

    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

</div>
</div>
