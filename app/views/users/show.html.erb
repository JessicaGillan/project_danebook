
<!-- Top Profile Banner -->
<%= render partial: 'users/profile_top_banner', locals: { user: @user } %>

<!-- Timeline: Main Content -->
<section class="row">

  <!-- LEFT -->
  <aside class="col-sm-5">

      <!-- ABOUT -->
      <article class="panel panel-default">
        <div class="panel-heading">
          <h4>About</h4>
        </div>
        <div class="panel-body">
          <div class="col-xs-12">
            <p>
              <span class="custom-info-label">Born on:</span>
              <span class="pull-right"><%= @user.profile.birthday %></span>
            </p>
            <p>
              <span class="custom-info-label">Went to school at:</span>
              <span class="pull-right"><%= @user.profile.college %></span>
            </p>
            <p>
              <span class="custom-info-label">Hometown:</span>
              <span class="pull-right"><%= @user.profile.hometown %></span>
            </p>
            <p>
              <span class="custom-info-label">Currently Lives:</span>
              <span class="pull-right"><%= @user.profile.current_location %></span>
            </p>
          </div>
        </div>
      </article>

      <!-- PHOTOS -->
      <%= render partial: 'photos/photos_thumbnail_panel',
                 locals: { photos: @user.random_photos,
                           count:   @user.photos.count,
                            user:   @user } %>

      <!-- FRIENDS -->
      <%= render partial: 'friendings/friends_thumbnail_panel',
                 locals: { friends: @user.random_friends,
                           count:   @user.friends.count,
                            user:   @user } %>
  </aside><!-- left -->

  <!-- RIGHT -->
  <div class="col-sm-7 custom-margin">

    <!-- SUBMIT POST  -->
    <%= render partial: 'posts/post_form',
               locals: { post: @post,
                         user: @user } %>
                         
    <div id="user-posts">
      <!-- Posts -->
      <%= render @user.posts %>
    </div>

  </div><!-- right -->
</section><!-- main content -->
