(function(){
  $('#new_post')[0].reset();
  
  var post = "<%= escape_javascript(render @post) %>";
  var $post = $(post);

  $("#user-posts").prepend($post);

  // This wasn't working when hide before prepend, slide after
  // TODO: figure out why.
  $post.hide();
  $post.slideDown(1000);
})();

