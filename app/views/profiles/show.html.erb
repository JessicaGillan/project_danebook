
  <!-- Top Profile Banner -->
  <%= render partial: 'users/profile_top_banner', locals: { user: @user } %>

  <section id="content">
    <div class="row">
      <div class="col-sm-12">
        <div class="panel panel-default">
          <div class="panel-heading clearfix text-center">
            <h3 class="panel-title">About</h3>

            <% if current_user.id == @user.id %>
             <%= link_to "Edit Profile", edit_user_profile_path( current_user ), class: "btn btn-primary pull-right" %>
            <% end %>
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-sm-6">
                <div class="row">
                  <div class="col-sm-12">
                   <h4>Basic Information</h4>
                  </div>
                </div>
                <div class="row">
                  <div class="col-xs-12">
                    <p>
                      <span class="custom-info-label">Born on:</span>
                      <span class="pull-right"><%= @user.profile.birthday %></span>
                    </p>
                    <p>
                      <span class="custom-info-label">Went to school at:</span>
                      <span class="pull-right"><%= @user.profile.college %></span>
                    </p>
                    <p>
                      <span class="custom-info-label">Hometown:</span>
                      <span class="pull-right"><%= @user.profile.hometown %></span>
                    </p>
                    <p>
                      <span class="custom-info-label">Currently Lives:</span>
                      <span class="pull-right"><%= @user.profile.current_location %></span>
                    </p>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-12">
                   <h4>Contact Information</h4>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-12">
                    <p>
                      <span class="custom-info-label">Email:</span>
                      <span class="pull-right"><%= @user.email %></span>
                    </p>
                    <p>
                      <span class="custom-info-label">Telephone:</span>
                      <span class="pull-right"><%= @user.profile.phone %></span>
                    </p>
                  </div>
                </div>
              </div>
              <div class="col-sm-6">
                <h4>Words to Live By</h4>
                <p id="tagline" class="text-center"><%= @user.profile.tagline %></p>
                <h4>About Me</h4>
                <p id="about-me" class="text-center"><%= @user.profile.about_me %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
