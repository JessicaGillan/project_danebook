<main class="container-fluid">
  <section id="profile-banner">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <div class="banner-wrapper">
          <%= image_tag 'quokka.png', alt: "Profile Image" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <nav class="navbar navbar-default">
          <div class="col-sm-2 col-sm-offset-3">
            <h4><%= "#{@user.profile.first_name} #{@user.profile.last_name}" %></h4>
          </div>
          <div class="col-sm-6">
            <ul class="nav navbar-nav ">
              <li><%= link_to "Timeline", user_path(@user) %></li>
              <li><%= link_to "About", user_profile_path(@user) %></li>
              <li><a href="#">Photos</a></li>
              <li><a href="#">Friends</a></li>
            </ul>
          </div>
          <div class="col-sm-1">
            <ul class="nav navbar-nav navbar-right">
              <% if current_user.id == @user.id %>
                <li><%= link_to "Edit Profile", edit_user_profile_path( current_user ) %></li>
              <% end %>
            </ul>
          </div>
        </nav>
      </div>
    </div>
  </section>

  <section id="content">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">About</h3>
            <div class="pull-right">
              <% if current_user.id == @user.id %>
               <%= link_to "Edit Profile", edit_user_profile_path( current_user ), class: "btn btn-primary" %>
              <% end %>
            </div>
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-sm-6">
                <div class="row">
                  <div class="col-sm-12">
                   <h4>Basic Information</h4>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-6 titles">
                    <ul>
                      <li>Birthday:</li>
                      <li>College:</li>
                      <li>Hometown:</li>
                      <li>Currently Lives:</li>
                    </ul>
                  </div>
                  <div class="col-sm-6">
                    <ul>
                      <li><%= @user.profile.birthday %></li>
                      <li><%= @user.profile.college %></li>
                      <li><%= @user.profile.hometown %></li>
                      <li><%= @user.profile.current_location %></li>
                    </ul>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-12">
                   <h4>Contact Information</h4>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-6 titles">
                    <ul>
                      <li>Email:</li>
                      <li>Telephone:</li>
                    </ul>
                  </div>
                  <div class="col-sm-6">
                    <ul>
                      <li><%= @user.email %></li>
                      <li><%= @user.profile.phone %></li>
                    </ul>
                  </div>
                </div>
              </div>
              <div class="col-sm-6">
                <h4>Words to Live By</h4>
                <p id="tagline"><%= @user.profile.tagline %></p>
                <h4>About Me</h4>
                <p id="about-me"><%= @user.profile.about_me %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
